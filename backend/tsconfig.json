{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "skipLibCheck": true,  // This is important - it will skip checking types in node_modules
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,  // Temporarily disable this
    "strictNullChecks": true,
    "strictFunctionTypes": false,  // Temporarily disable this
    "noImplicitThis": true,
    "noUnusedLocals": false,  // Temporarily disable this
    "noUnusedParameters": false,  // Temporarily disable this
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}